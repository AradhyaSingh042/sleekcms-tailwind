{
  "compilerOptions": {
    "target": "ES2020",         
    "module": "NodeNext",        
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",              
    "strict": true,
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",              
  },
  "include": ["index.ts", "src/**/*", "tests/**/*"]
}